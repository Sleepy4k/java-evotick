<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.1" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_1.xsd">
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.evotick.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>com.evotick.controller.user.PaymentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventController</servlet-name>
        <servlet-class>com.evotick.controller.user.EventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventDetailController</servlet-name>
        <servlet-class>com.evotick.controller.user.EventDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConcertController</servlet-name>
        <servlet-class>com.evotick.controller.user.ConcertController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeminarController</servlet-name>
        <servlet-class>com.evotick.controller.user.SeminarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SportController</servlet-name>
        <servlet-class>com.evotick.controller.user.SportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoryController</servlet-name>
        <servlet-class>com.evotick.controller.user.HistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketController</servlet-name>
        <servlet-class>com.evotick.controller.user.TicketController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventAdminController</servlet-name>
        <servlet-class>com.evotick.controller.admin.EventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PackageAdminController</servlet-name>
        <servlet-class>com.evotick.controller.admin.PackageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketAdminController</servlet-name>
        <servlet-class>com.evotick.controller.admin.TicketController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdminController</servlet-name>
        <servlet-class>com.evotick.controller.admin.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/user/payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventController</servlet-name>
        <url-pattern>/event</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventDetailController</servlet-name>
        <url-pattern>/event/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConcertController</servlet-name>
        <url-pattern>/concert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeminarController</servlet-name>
        <url-pattern>/seminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SportController</servlet-name>
        <url-pattern>/sport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryController</servlet-name>
        <url-pattern>/user/history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketController</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventAdminController</servlet-name>
        <url-pattern>/admin-event</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PackageAdminController</servlet-name>
        <url-pattern>/admin-package</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketAdminController</servlet-name>
        <url-pattern>/admin-ticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdminController</servlet-name>
        <url-pattern>/admin-user</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>SecurityProvider</filter-name>
        <filter-class>com.evotick.provider.SecurityProvider</filter-class>
    </filter>
    <filter>
        <filter-name>UserProvider</filter-name>
        <filter-class>com.evotick.provider.UserProvider</filter-class>
    </filter>
    <filter>
        <filter-name>AuthProvider</filter-name>
        <filter-class>com.evotick.provider.AuthProvider</filter-class>
    </filter>
    <filter>
        <filter-name>AdminProvider</filter-name>
        <filter-class>com.evotick.provider.AdminProvider</filter-class>
    </filter>
    <filter>
        <filter-name>GuestProvider</filter-name>
        <filter-class>com.evotick.provider.GuestProvider</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GuestProvider</filter-name>
        <servlet-name>LoginController</servlet-name>
        <servlet-name>RegisterController</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminProvider</filter-name>
        <url-pattern>/admin*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthProvider</filter-name>
        <servlet-name>DashboardController</servlet-name>
        <servlet-name>LogoutController</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserProvider</filter-name>
        <servlet-name>EventController</servlet-name>
        <servlet-name>EventDetailController</servlet-name>
        <servlet-name>PaymentController</servlet-name>
        <servlet-name>HistoryController</servlet-name>
        <servlet-name>TicketController</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityProvider</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.evotick.middleware.DatabaseMiddleware</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.evotick.middleware.AppMiddleware</listener-class>
    </listener>
    <servlet>
        <servlet-name>LandingController</servlet-name>
        <servlet-class>com.evotick.controller.LandingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.evotick.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.evotick.controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LandingController</servlet-name>
        <url-pattern>/landing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
